    "build:deploy:localnet": "anchor build && anchor deploy --provider.cluster localnet",
    "build:deploy:devnet": "anchor build && anchor deploy --provider.cluster devnet"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@magicblock-labs/ephemeral-rollups-sdk": "^0.6.5",
